{
  "manifest_version": 3,
  "name": "OmniWallet (MVP)",
  "version": "0.1.0",
  "description": "Minimal EVM wallet extension (Avalanche + Polygon).",
  "action": {
    "default_title": "OmniWallet",
    "default_popup": "src/popup/index.html"
  },
  "background": {
    "service_worker": "service-worker-loader.js",
    "type": "module"
  },
  "permissions": [
    "storage",
    "notifications",
    "windows",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "js": [
        "assets/contentScript.ts-DBjKCxlH.js"
      ],
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "matches": [
        "<all_urls>"
      ],
      "resources": [
        "src/inpage.ts",
        "assets/contentScript.ts-DBjKCxlH.js",
        "assets/contentScript.ts-DBjKCxlH.js.map"
      ],
      "use_dynamic_url": false
    }
  ]
}
